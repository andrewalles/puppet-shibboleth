        <MetadataProvider type="<%= @provider_type %>" validate="true"
          uri="<%= @provider_uri %>"
          backingFilePath="<%= @backing_file %>"
          reloadInterval="<%= @provider_reload_interval %>">
          <%- if @metadata_filter_max_validity_interval > 0 -%>
            <MetadataFilter type="RequireValidUntil" maxValidityInterval="@metadata_filter_max_validity_interval"/>
          <%- end -%>
          <%- if @cert_uri -%>
            <MetadataFilter type="Signature" certificate="%= @cert_file %>"/>
          <%- end -%>
          <%= @custom_xml %>
